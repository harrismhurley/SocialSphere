{{#if posts.length}}
  {{#each posts}}
    <div class="dashPostWrapper">
      {{!-- top part --}}
      <div class="dashPostHeader">
        <div class="dashPostTitle">
          <h1>{{this.title}}</h1> 
        </div>
        <div class="postDate">
          <p>{{format_date this.createdAt}}</p>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>No posts available.</p>
{{/if}}


{{!-- container with form and button --}}
<div class="container">
    <div id="addPostWrapper" class="addPostWrapper" style="display: none;">
        <div class="addPostHeader">
            <h1>Create Post</h1>
        </div>
        <div class="addPostContainer">
            <form id="post-form" class="form">
                <div class="field">
                    <input id="postTitle" class="input" type="text" name="postTitle" placeholder="Title" />
                </div>
                <div class="field">
                    <input id="postContent" class="input" type="text" name="postContent" placeholder="Content" />
                </div>
                <button type="submit" class="createPostBtn">Create Post</button>
            </form>
        </div>
    </div>
    <button id="toggleAddPostBtn" class="addPostBtn">Add Post</button>
</div>

<script src="js/addPost.js"></script>
